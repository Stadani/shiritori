<div class="container-fluid" data-bs-theme="light"> 
    <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom"> 
        <ul class="nav nav-pills"> 
            <li class="nav-item"><a href="/" class="nav-link">Shiritori</a></li> 
            <li class="nav-item"><a href="/about" class="nav-link">About</a></li> 
            <button id="theme-toggle" class="btn btn-outline-primary"><i class="bi bi-brightness-high"></i></button>
        </ul> 
    </header> 
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/vue@3/dist/vue.global.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const toggleBtn = document.getElementById('theme-toggle');
        const body = document.body;
        const icon = toggleBtn.querySelector('i');

        // Load stored theme if it exists
        const storedTheme = localStorage.getItem('theme');
        if (storedTheme) {
            body.setAttribute('data-bs-theme', storedTheme);
            icon.className = storedTheme === 'light' ? 'bi bi-brightness-high' : 'bi bi-moon';
        } else {
            icon.className = 'bi bi-brightness-high';
        }

        // Click handler
        toggleBtn.addEventListener('click', () => {
            const newTheme = body.getAttribute('data-bs-theme') === 'light' ? 'dark' : 'light';
            body.setAttribute('data-bs-theme', newTheme);
            localStorage.setItem('theme', newTheme);

            // Update icon
            icon.className = newTheme === 'light' ? 'bi bi-brightness-high' : 'bi bi-moon';
        });
    });
</script>
